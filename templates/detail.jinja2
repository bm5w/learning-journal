{% extends "base.jinja2" %}
{% block body %}

  <div id='wrapper'>
    <ul id="gallery">
      <article class="entry" id="{{entry.id}}">
        <h3>{{ entry.title }}</h3>
        <p class="dateline">{{ entry.created.strftime('%b. %d, %Y') }}
        <p class="text">{{ entry.text | safe }} </p>
        {% if request.authenticated_userid %}
          <a href="{{ request.route_url('edit', id=entry.id) }}">Edit</a>
        {% endif %}
      </article>
    </ul>
  </div>
{% endblock %}