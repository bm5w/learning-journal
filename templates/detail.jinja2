{% extends "base.jinja2" %}
{% block body %}

  <div id='wrapper'>
    <ul id="gallery">
      {% for entry in entries %}
      <article class="entry" id="{{entry.id}}">
        <h3>{{ entry.title }}</h3>
        <p class="dateline">{{ entry.created.strftime('%b. %d, %Y') }}
        <p class="text">{{ entry.text }} </p>
        <a href="{{ request.route_url('edit', id=entry.id) }}">Edit</a>
      </article>
      {% else %}
      <div class="entry">
        <p><em>No entries here so far</em></p>
      </div>
      {% endfor %}
    </ul>
  </div>
{% endblock %}